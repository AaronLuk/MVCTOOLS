      margin-bottom: 30px;
      -moz-box-shadow: 1px 1px 1px rgba(0, 1, 1, 0.02);
      -webkit-box-shadow: 1px 1px 1px rgba(0, 1, 1, 0.02);
      box-shadow: 1px 1px 1px rgba(0, 1, 1, 0.02);

      transition: all 300ms ease-in-out;
  
