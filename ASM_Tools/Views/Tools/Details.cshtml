    .member-entry .member-details {
      float: left;
    }
    .member-entry .member-img {
      position: relative;
      display: block;
      width: 10%;
    }
    .member-entry .member-img img {
      width: 100%;
      display: block;
      max-width: 100%;
      height: auto;
    }
    .member-entry .member-img i {
      position: absolute;
      display: block;
      left: 50%;
      top: 50%;
      margin-top: -12.5px;
      margin-left: -12.5px;
      color: #FFF;
      font-size: 25px;
      zoom: 1;
     
      opacity: 0;
      filter: alpha(opacity=0);
     
      transform: scale(0.5);

      transition: all 300ms ease-in-out;
    }
    .member-entry .member-img:hover i {

      transform: scale(1);
      zoom: 1;
    
      opacity: 1;
      filter: alpha(opacity=100);
