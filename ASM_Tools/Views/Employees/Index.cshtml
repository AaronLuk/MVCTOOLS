                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>-->
                                        @*<h4 class="modal-title">@item.LastName</h4>*@
                                        <!--</div>
                                        <div class="modal-body">-->
                                        @*<img class="panel-heading" src="@Url.Content(item.CoverImagePath)" style='height: 100%; width: 100%; object-fit: contain'>*@
                                        <!--<div style="text-align:center">-->
                                        @*<h4>@item.Title</h4>*@
                                        <!--<hr />
                                        <p>-->
                                        @*All content rendered is from the first item.*@
                                        @*need to make it render the correct content*@

                                        @*@item.Description*@
                                        <!--</p>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>-->



                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                                <span class="label label-info">@item.team</span>

                            </div>
                        </div>
                    </div>

                }


            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div>
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6 col-xs-1">

                        <div class="card-container">
                            <span class="pro">@item.team</span>
                            <img class="round" src="@Url.Content(item.DisplayPhotoPath)" alt="user" />
                            <h3>@item.FirstMidName @item.LastName </h3>
                            <span class="label label-info" style="font-size: 1em">@item.Department</span>
                            <p>User interface designer and <br /> front-end developer</p>
                            <div class="buttons">
                                <button class="primary">
                                    Message
                                </button>
                                <button class="primary ghost">
                                    Following
                                </button>
                            </div>
                            <div class="skills">
                                <h6>Skills</h6>
                                <ul>
                                    <li>UI / UX</li>
                                    <li>Front End Development</li>
                                    <li>HTML</li>
                                    <li>CSS</li>
                                    <li>JavaScript</li>
                                    <li>React</li>
                                    <li>Node</li>
                                </ul>
                            </div>
                        </div>

                        <footer>
                            <p>
