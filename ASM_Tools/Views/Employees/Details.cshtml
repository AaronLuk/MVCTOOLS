        </div>
        @foreach (var item in Model.Tools)
        {
            if (item.Checked)
            {

                <div class="member-entry">
                    <a href="#" class="member-img">
                        <img src="@Url.Content(item.tool.CoverImagePath)" class="img-rounded">
                        <i class="fa fa-forward"></i>
                    </a>
