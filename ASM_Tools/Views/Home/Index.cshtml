@model List<ASM_Tools.Models.Carousel>
@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel"  style="width: 100%; margin-bottom: 10px">
        <!-- Indicators -->
        <ol class="carousel-indicators">

            @{ int length = Model.Count();}
            @{ int i = 0;}
            @for (i = 1; i <= length; i++)
            {
                var active = i == 1 ? "active" : "";
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            @{ int j = 0;}
            @foreach (var item in Model)
            {
                j++;
                var active = j == 1 ? "active" : "";
                <div class="item @active">
                    <img src="@Url.Content(item.ImagePath)" alt="https://www.asmpacific.com/templates/matamko/images/logo.png">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1 style="color:white">@item.Title</h1>
                            <p style="color:antiquewhite; ">@item.Content</p> 
                        </div>
                    </div>
                </div>
            }


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="carouselcontroller">
        <a href="@Url.Action("Index", "Carousel")" class="btn btn-danger btn-lg btn-block">Edit Images</a>
    </div>
</div>


<div class="container">
    <div class="centers">
        <h1>ASM Centers</h1>

        <div class="row">

            <a href="@Url.Action("Singapore", "Centre")">
                <div class="col-lg-4">
                    <div class="center-item">
                        <div class="glyphicon glyphicon-alert">

                        </div>
                        <h3>ATS</h3>
                    </div>
                </div>
            </a>
            <a href="@Url.Action("China", "Centre")">
                <div class="col-lg-4">
                    <div class="center-item">
                        <h3>ATC</h3>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("HongKong", "Centre")">
                <div class="col-lg-4">
                    <div class="center-item">
                        <h3>ATHK</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="row">
            <a href="@Url.Action("Netherland", "Centre")">
                <div class="col-lg-4">
                    <div class="center-item">
                        <h3>CoC</h3>
                    </div>
                </div>
            </a>
            <a href="@Url.Action("Taiwan", "Centre")">
                <div class="col-lg-4">
                    <div class="center-item">
                        <h3>ATW</h3>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .container{
        margin-top: 20px;
    }

    .row{
        margin: 20px auto;
    }

    .center-item {
        height: 200px;
        width: auto;
        background: red;
        border: 1px green solid;
        position: relative;
    }

    .center-item h3{
        position: absolute;
        top: 60%;
        left: 50%;
        margin: 0;
        padding: 0;
        transform: translateX(-50%) translateY(-50%);
    }

    .center-item .glyphicon-alert{
        position: absolute;
        top: 40%;
        left: 50%;
        margin: 0;
        padding: 0;
        transform: translateX(-50%) translateY(-50%);
        font-size: 200%;
        color: white;
        transition: 0.5s ease;

    }

    .center-item:hover > .glyphicon{
        color:aqua;
    }


</style>