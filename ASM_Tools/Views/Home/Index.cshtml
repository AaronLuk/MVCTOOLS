@model List<ASM_Tools.Models.Carousel>
@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel"  style="width: 100%; margin-bottom: 10px">
        <!-- Indicators -->
        <ol class="carousel-indicators">

            @{ int length = Model.Count();}
            @{ int i = 0;}
            @for (i = 1; i <= length; i++)
            {
                var active = i == 1 ? "active" : "";
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            }



        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            @{ int j = 0;}
            @foreach (var item in Model)
            {
                j++;
                var active = j == 1 ? "active" : "";
                <div class="item @active">
                    <img src="@Url.Content(item.ImagePath)" alt="https://www.asmpacific.com/templates/matamko/images/logo.png">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1 style="color:white">@item.Title</h1>
                            <p style="color:antiquewhite; ">@item.Content</p> 
                        </div>
                    </div>
                </div>
            }


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="carouselcontroller">
        <a href="@Url.Action("Index", "Carousel")" class="btn btn-danger btn-lg btn-block">Edit Images</a>
    </div>
</div>


